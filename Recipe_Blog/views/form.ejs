<!-- include the code from partials (banner with nav) -->
<%- include("partials/header.ejs") %>

<body>
    <h1 class="makeAPost">Build-a-Recipe</h1>
    <!-- Recipe post form -->
    <div class="formsDiv">
    <form action="/submitPost" method="POST" enctype="multipart/form-data">
        <!-- get name 
        <label for="creatorName">Name:</label><br>
        <input type="text" id="creatorName" name="creatorName" required><br><br>-->

        <!-- get title -->
        <label for="recipeTitle">Recipe Title:</label><br>
        <input type="text" id="recipeTitle" name="recipeTitle" required><br><br>

        <!-- get ingredients -->
        <label for="ingredients">Ingredients:</label><br>
        <textarea id="ingredients" name="ingredients" rows="5" cols="50"></textarea>
        <br><br>

        <!-- get content -->
        <label for="content">Instructions:</label><br>
        <textarea id="content" name="content" rows="5" cols="50"></textarea>
        <br><br>
        
        <!-- get difficulty -->
        <label for="difficulty">Difficulty (1â€“5):</label><br>
        <select name="difficulty" id="difficulty" required>
        <option value="" disabled selected>Select difficulty</option>
        <% for (let i = 1; i <= 5; i++) { %>
            <option value="<%= i %>"><%= i %></option>
        <% } %>
        </select>
        <br><br>
        
        <!-- get tag w dropdown -->
        <label for="tagName">Dietary Tags:</label><br>
        <select name="tagName" id="tagName">
            <% tags.forEach(function(tag) { %>
                <option value="<%= tag %>"><%= tag %></option>
            <% }) %>
        </select>
        <br><br>

        <% if (cuisineTypeTags && cuisineTypeTags.length > 0) { %>
            <!-- get tag w dropdown -->
            <label for="cuisineTag">Cuisine Tags:</label><br>
            <select name="cuisineTag" id="cuisineTag">
                <% cuisineTypeTags.forEach(function(cuisineTypeTag) { %>
                    <option value="<%= cuisineTypeTag %>"><%= cuisineTypeTag %></option>
                <% }) %>
            </select>
            <br><br>
        <% } %>
        
        <!-- get tag w dropdown -->
        <label for="mealType">Meal Types:</label><br>
        <select name="mealType" id="mealType">
            <% mealTypeTags.forEach(function(mealTypeTag) { %>
                <option value="<%= mealTypeTag %>"><%= mealTypeTag %></option>
            <% }) %>
        </select>
        <br><br>

        <!-- get photos -->
        <label for="image">Upload Image:</label><br>
        <input type="file" id="image" name="image" accept="image/*">
        <br><br>

        <!-- get cook time -->
        <label for="cookTime">Cook Time (minutes):</label><br>
        <input type="number" id="cookTime" name="cookTime" min="0" step="1"><br><br>

        <!-- get Notes -->
        <label for="notes">Notes (optional):</label><br>
        <textarea id="notes" name="notes" rows="3" cols="50" placeholder="Any tips or extra details..."></textarea>
        <br><br>

        <!-- submit -->
        <input class="formSubmit" type="submit" value="Submit">
    </form>
    </div>
</body>
</main>
</html>